{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",

    "moduleResolution": "node",
    "jsx": "react",

		"lib": ["es6", "dom", "es2015.promise"],

    "baseUrl": "src",
    "paths": {
      "solidify-lib": ["../node_modules/solidify-lib/*"]
    },

		"isolatedModules": false,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "declaration": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,

    "removeComments": true,
    "preserveConstEnums": true,

		"importHelpers" : true,
		"noEmitHelpers" : true
  },

	"include" : [
		"./**/*",
		"../node_modules/solidify-lib/*"
	],

	"exclude": [
		"../node_modules/*"
	],

  "compileOnSave": false,
  "buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}