{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",

    "moduleResolution": "node",
    "jsx": "react",

		"lib": ["es6", "dom", "es2015.promise"],

    "baseUrl": ".",
    "paths": {
      "solidify-lib": ["node_modules/solidify-lib/"]
    },

		"isolatedModules": false,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
		"importHelpers" : true,
		"noEmitHelpers" : true
  },
	"exclude": [],
  "compileOnSave": false,
  "buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}